<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
android:orientation="vertical"
    >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/fram"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="330dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/profile_image_details"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_name"
            android:text="name"
            android:textColor="#fff"
            android:textStyle="bold"
            android:layout_gravity="bottom|left"
            android:layout_margin="@dimen/_10sdp"
            android:textSize="@dimen/_18ssp"
            ></TextView>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/fram"
        android:id="@+id/view"
        android:layout_marginBottom="@dimen/_5sdp"
        android:background="@android:color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:id="@+id/linear2"
        android:layout_below="@id/view"
        android:layout_height="wrap_content"
        >
        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/location"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_15sdp"
            ></ImageView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_location"
            android:textSize="@dimen/_15ssp"
            android:text="alex"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            ></TextView>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/linear3"
        android:layout_below="@id/linear2"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BIO"
            android:layout_marginLeft="@dimen/_10sdp"
            android:textStyle="bold"
            android:textSize="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_15sdp"
            ></TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profile_BIO"
            android:textSize="@dimen/_15ssp"
            android:text="software engineer"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            ></TextView>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_below="@id/linear3"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_margin="@dimen/_10sdp"
        android:elevation="@dimen/_7sdp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/bluelove"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:id="@+id/image_love"
                >
            </ImageView>
            <ImageView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:src="@drawable/blueadd"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_80sdp"
                android:id="@+id/image_add"
                >
            </ImageView>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            >
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="   0"
                android:textSize="@dimen/_20ssp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_60sdp"
                android:id="@+id/profile_love_text"
                >
            </TextView>
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="  0"
                android:textSize="@dimen/_20ssp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginLeft="@dimen/_88sdp"
                android:id="@+id/profile_friend_text"
                >
            </TextView>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
    <LinearLayout
        android:layout_below="@id/card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        >
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:background="@drawable/profile_design"
            android:layout_marginRight="1dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/linear_love"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:src="@drawable/whitelove"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:id="@+id/profile_add_love"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="bottom"
                ></ImageView>

        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:id="@+id/linear_add"
            android:background="@drawable/profile_design"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            >
            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:src="@drawable/whiteadd"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:id="@+id/profile_add_friend"
                android:layout_marginLeft="@dimen/_60sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_gravity="bottom"
                ></ImageView>

        </LinearLayout>


    </LinearLayout>


</RelativeLayout>