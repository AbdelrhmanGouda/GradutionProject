<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.TherapyDataFragment">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_margin="@dimen/_20sdp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:id="@+id/therapy_photo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/therapy_photo"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        android:text="DR.Ahmed Ali"
        android:id="@+id/therapy_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/therapy_name"
        android:layout_marginTop="@dimen/_12sdp"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/_13ssp"
        android:text="Specialist in Addiction Treatment"
        android:id="@+id/therapy_description"/>

    <RatingBar
        android:id="@+id/therapy_rate_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_12ssp"
        android:layout_below="@id/therapy_description"
        android:layout_centerHorizontal="true"
        android:numStars="5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/therapy_rate_bar"
        android:textSize="@dimen/_18ssp"
        android:textStyle="bold"
        android:text="Cost : 200 EGP"
        android:id="@+id/therapy_session_cost"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_below="@id/therapy_session_cost"
        android:textStyle="bold"
        android:textSize="@dimen/_18ssp"
        android:text="Location : El Bitash Street"
        android:id="@+id/therapy_clinic_location"/>


</RelativeLayout>