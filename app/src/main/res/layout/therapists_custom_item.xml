<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_margin="@dimen/_20sdp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/therapy_photo"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_25sdp"
        android:textSize="@dimen/_25ssp"
        android:textStyle="bold"
        android:text="DR.Ahmed Ali"
        android:id="@+id/therapy_name"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_110sdp"
        android:layout_marginTop="@dimen/_60sdp"
        android:textSize="@dimen/_13ssp"
        android:text="Specialist in Addiction Treatment"
        android:id="@+id/therapy_description"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_100sdp"
        android:layout_marginTop="@dimen/_80sdp"
        android:numStars="5"
        android:id="@+id/therapy_rate_bar"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_130sdp"
        android:textSize="@dimen/_13ssp"
        android:text="Cost : 200 EGP"
        android:id="@+id/therapy_session_cost"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/_25sdp"
        android:layout_marginTop="@dimen/_155sdp"
        android:textSize="@dimen/_13ssp"
        android:text="Location : El Bitash Street"
        android:id="@+id/therapy_clinic_location"/>

    <Button
        android:layout_width="@dimen/_80sdp"
        android:layout_height="@dimen/_25sdp"
        android:background="@drawable/custom_button"
        android:layout_marginTop="@dimen/_190sdp"
        android:layout_marginLeft="@dimen/_120sdp"
        android:textSize="@dimen/_14ssp"
        android:text="Book"
        android:id="@+id/therapy_book_button"/>


</androidx.cardview.widget.CardView>