<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.HomeFragment"
    android:orientation="vertical"
    android:gravity="center">

   <androidx.cardview.widget.CardView
       android:id="@+id/home_chat_boot_card"
       android:layout_width="330dp"
       android:layout_height="120dp"
       app:cardBackgroundColor="@color/color"
       android:layout_marginTop="90dp"
       card_view:cardCornerRadius="25dp"
       card_view:cardElevation="10dp"
       >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
         android:orientation="horizontal"
          android:layout_margin="15dp">
      <ImageView
          android:layout_width="80dp"
          android:layout_height="80dp"
          android:background="@drawable/chat_bot"
          android:layout_margin="10dp"/>
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_margin="10dp"
          android:textSize="15dp"
          android:text="Start chat with a bot \n to check how are you \n doing."/>
      </LinearLayout>
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/home_chat_person_card"
       android:layout_width="330dp"
       android:layout_height="120dp"
       app:cardBackgroundColor="@color/color"
       android:layout_marginTop="80dp"
       card_view:cardCornerRadius="25dp"
       card_view:cardElevation="10dp"
       >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_margin="15dp">
         <ImageView
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:background="@drawable/chat_icons"
             android:layout_margin="10dp"/>
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginTop="10dp"
             android:layout_margin="10dp"
             android:textSize="15dp"
             android:text="\Start chat with a  \n person to feel better ."/>
      </LinearLayout>
   </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:id="@+id/home_therapist_card"
       android:layout_width="330dp"
       android:layout_height="120dp"
       app:cardBackgroundColor="@color/color"
       android:layout_marginTop="80dp"
       android:layout_marginBottom="20dp"
       card_view:cardCornerRadius="25dp"
       card_view:cardElevation="10dp"
       >
      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_margin="15dp">
         <ImageView
             android:layout_width="80dp"
             android:layout_height="80dp"
             android:background="@drawable/doctor_icon"
             android:layout_margin="10dp"/>

         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_margin="10dp"
             android:text="Reserve a visit to a    \n therapist."
             android:textSize="15dp" />
      </LinearLayout>
   </androidx.cardview.widget.CardView>


</LinearLayout>