<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="5dp"
    android:background="@color/light_Gray">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friends_list_image"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:src="@drawable/doctor_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/friends_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_toRightOf="@id/friends_list_image"
        android:text="Ahmed Ali"
        android:layout_marginTop="@dimen/_8sdp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/friends_list_sender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_below="@id/friends_list_name"
        android:layout_marginTop="@dimen/_5sdp"
        android:text="Ahmed Ali"
        android:textStyle="bold"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@id/friends_list_image"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/friends_list_lastmessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="15dp"
        android:maxLines="1"
        android:lines="1"
        android:minLines="1"
        android:singleLine="true"
        android:layout_below="@id/friends_list_name"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_3sdp"
        android:text="hello"
        android:layout_toRightOf="@id/friends_list_sender"
        android:layout_gravity="center_vertical"
        />
    <TextView
        android:id="@+id/friends_list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="time"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_alignParentRight="true"
        android:layout_gravity="center_vertical"
        />



</RelativeLayout>